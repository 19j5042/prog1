#ver1
n=4
for a in range(n):
    for b in range(a):
        print("\t",end="")
    print("*",end="")
    for c in range(n-(a+1)):
        print("\t\t*",end="")
    print()

#ver2
n=4
for a in range(n):
    for b in range(a):
        print("\t",end="")
    print("*",end="")
    for c in range(n-(a+1)):
        for d in range(2):
            print("\t",end="")
        print("*",end="")
    print()
